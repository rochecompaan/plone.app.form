<html i18n:domain="plone">

<!-- wysiwyg multiplexing widget, this allows for both Epoz and Kupu to coexist -->
<tal:widget define="inputname view/inputname;
										inputvalue view/inputvalue;
										here view/tmplcontext;
										context view/tmplcontext;
										portal_url view/portal_url">

<div metal:use-macro="here/wysiwyg_support/macros/wysiwygEditorBox" />
<div metal:use-macro="here/wysiwyg_support/macros/textFormatSelector" />

<tal:comment replace="nothing">
<div metal:define-macro="wysiwygEditorBox">
  <tal:block define="macros here/kupu_library_tool/getWysiwygmacros;">
     <metal:block metal:use-macro="macros/wysiwygEditorBox">
 </metal:block>
 </tal:block>
</div>


<div metal:define-macro="textFormatSelector">
  <tal:block define="macros here/kupu_library_tool/getWysiwygmacros;">
 <metal:block metal:use-macro="macros/textFormatSelector">
 </metal:block>
 </tal:block>
</div>
</tal:comment>

</tal:widget>
</html>